#include<stdio.h>
#include<stdlib.h>
int main()
{
 int num1,num2;
float result = 0;
char ch;
printf("CHOOSE OPERATIONS TO PERFORM(+,-,*,/,%):");
scanf("%c",&ch);
printf("ENTER FIRST NUMBER:");
scanf("%d",&num1);
printf("ENTER SECOND NUMBER:");
scanf("%d",&num2);
switch(ch)
{
  case'+':result=num1+num2;
   break;
  case'-':result=num1-num2;
   break;
  case'*':result=num1*num2;
   break;
  case'/':
           if(num2==0)
            {
               printf("ERROR:DIVIDED BY ZERO\n");
                exit(0);
            }
             result=(float)num1/(float)num2;
               break;
  case'%':result=num1%num2;
   break;
  default:printf("INVALID OPERATION.\n");
    exit(0);
}
printf("RESULT:%d%c%d=%f\n",num1,ch,num2,result);     //DISPLAY OUTPUT SCREEN
}
